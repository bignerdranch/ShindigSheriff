<% if current_user.approver_organizations.empty? %>
    No Organizations!
  <% else %>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Site</th>
          <th>Organizer</th>
        </tr>
      </thead>
      <tbody>
        <% if current_user.approver_organizations %>
          <% current_user.approver_organizations.each do |organization| %>
            <tr>
              <td><%= organization.name %></td>
              <td><%= organization.website %></td>
              <td><%#= organization.user.email %></td>
            </tr>
          <% end %>
        <% else %>
          <div> No Organizations </div>
        <% end %>
      </tbody>
    </table>
  <% end %>

